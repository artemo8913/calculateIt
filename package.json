    "next": "15.3.1",
    "next-intl": "^4.1.0",
    "normalize.css": "^8.0.1",
    "postgres": "^3.4.7",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
